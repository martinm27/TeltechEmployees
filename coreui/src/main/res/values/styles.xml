<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IconButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Base Text Styles -->
    <style name="BaseText">
        <item name="android:ellipsize">end</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextTitle" parent="BaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextSubtitle" parent="BaseText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_medium_textSize</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextSpeaking" parent="BaseText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
    </style>
</resources>
