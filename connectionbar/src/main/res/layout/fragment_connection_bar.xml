<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:elevation="@dimen/connectionbar_elevation"
    tools:background="@color/green"
    tools:layout_height="wrap_content">

    <TextSwitcher
        android:id="@+id/connection_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inAnimation="@anim/top_enter_with_fade"
        android:outAnimation="@anim/bottom_exit_with_fade"
        android:padding="@dimen/connectionbar_titleText_padding"
        tools:background="@color/green">

        <TextView
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/connectionbar_titleText_drawablePadding"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:drawableStart="@drawable/ic_check_white"
            tools:text="Connected" />

        <TextView
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/connectionbar_titleText_drawablePadding"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/white" />

    </TextSwitcher>
</FrameLayout>
